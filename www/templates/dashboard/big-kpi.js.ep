function getMetrics(){
    $.getJSON("api/metrics", function(data){
	$.each(data, function(key, val){
	    $("#kpi-dat-"+key).text(val);

	    $("#kpi-drops").toggleClass("panel-red",   ((parseInt($("#kpi-dat-drops").text(),10) > 5)?true:false));
	    $("#kpi-calls").toggleClass("panel-green", ((parseInt($("#kpi-dat-calls").text(),10) < 15)?true:false));
	});
    });
}

getMetrics();
setInterval(getMetrics, 7000);

