<% my $table = begin %>
<% my (@hdr, @dat) = @_; %>


<div class="table-responsive">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
	<% for (@hdr) { %>
        <th><%= $_ %></th>
	<% } %>

      </tr>
    </thead>
    <tbody>
      <tr>
	<td>DATA</td>
      </tr>
    </tbody>
  </table>
</div>
<% end %>

<div class="col-lg-6"><%= $table->(qw(This is data), \(1..5)) %></div>
<div class="col-lg-6"><%= $table->(\(5..9), \(1..5)) %></div>

