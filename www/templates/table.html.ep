<% my $table = begin %>
<% my ($id, @hdr) = @_; %>
<div class="table-responsive">
  <table id="<%= $id %>" class="table table-bordered table-hover">
    <thead><tr><% for (@hdr) { %><th><%= $_ %></th><% } %></tr></thead>
    <tbody><tr><% for (0..$#hdr) { %><td>&nbsp;</td><% } %></tr></tbody>
  </table>
</div>
<% end %>

<div class="col-lg-6"><%= $table->('tbl1', qw(This is data)) %></div>
<div class="col-lg-6"><%= $table->('tbl2', qw(more data)) %></div>

